---
interface Props {
	title: string;
	subTitle: string;
	picSrc: string;
}

const { picSrc, title, subTitle } = Astro.props;
---

<section id="AboutMe" class="text-white body-font h-screen">
    <div class="container mx-auto flex px-5 py-24 md:flex-row flex-col items-center">
      <!-- Configura el tamaño de la foto para que ocupe 1/4 de pantalla -->
      <div class="lg:w-1/4 md:w-1/2 w-5/6 mb-10 md:mb-0 justify-items-center items-center">
        <img class="object-cover object-center rounded-full picProfile" alt="Bautista Ceriani" src={picSrc}>
      </div>
      <!-- Configura el tamaño del texto para que ocupe 3/4 de pantalla -->
      <div class="lg:w-3/4 md:w-1/2 lg:pl-24 md:pl-16 flex flex-col md:items-start md:text-left items-center text-center">
        <h1 class="title-font sm:text-4xl text-3xl mb-4 font-medium text-white">{title}
          <br><span class="text-base">{subTitle}</span>
        </h1>
        <p class="mb-8 leading-relaxed">
            Comence a programar en 2021, actualmente me desempeño como programador Fullstack, centrado en Laravel y backend.
        </p>
        <a href="https://github.com/bceriani" target="blank_" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded inline-flex items-center">
            <span>CV</span>
            <svg class="fill-current w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M13 8V2H7v6H2l8 8 8-8h-5zM0 18h20v2H0v-2z"/></svg>
          </a>
      </div>
    </div>
  </section>
  

  <style>
    .picProfile{
        height: 17vw;
    }
  </style>